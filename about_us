<script>
    $(document).ready(function() {
        loadMallDataCached(renderPageData);
    });
    
    function renderPageData(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        prefix = get_prefix();
        load_json(prefix+"/pages/placevertu-how-to-get-here.json", "#how_to_get_here");
        load_json(prefix+"/pages/placevertu-parking-information.json", "#parking_information");
        load_json(prefix+"/pages/placevertu-contact.json", "#administration_hours");
        
        $('#loading').hide();
        $('#page_content').fadeIn();
    }
    
    
    function load_json(json, container){
        $.getJSON(json).done(function(data) {
            if(sessionStorage.current_locale == "en-CA"){
                $(container).html(data.body);
            }else{
                $(container).html(data.body_2);
            }
        })
    }
</script>