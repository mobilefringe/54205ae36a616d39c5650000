<script>
    $(document).ready(function() {
        loadMallDataCached(renderPageData);
    });
    
    function renderPageData(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        prefix = get_prefix();
        load_json(prefix + "/pages/placevertu-place-vertu.json", "#place_vertu");
        load_json(prefix + "/pages/placevertu-leasing-information.json", "#leasing_information");
        load_json(prefix + "/pages/placevertu-charities.json", "#charities");
        load_json(prefix + "/pages/placevertu-green-initiatives.json", "#green_initiatives");
        load_json(prefix + "/pages/placevertu-building-conduct-policy.json", "#contract_policy");
        
        $('#loading').hide();
        $('#page_content').fadeIn();
    }

    function load_json(json, container){
        $.getJSON(json).done(function(data) {
            if(Cookies.get('current_locale') == "en-CA"){
                $(container).html(data.body);
            }else{
                $(container).html(data.body_2);
            }
        })
    }
</script>